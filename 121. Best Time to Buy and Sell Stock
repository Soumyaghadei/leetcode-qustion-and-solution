# 121. best time to buy and sell stock leetcode python 
def maxProfit(prices):
    buy_price = prices[0]
    profit = 0
    
    for i in range(1, len(prices)):
        if prices[i] < buy_price:
            # Update the buy price to the current price
            buy_price = prices[i]
        else:
            # Calculate current profit and update max profit
            current_profit = prices[i] - buy_price
            profit = max(current_profit, profit)
    
    return profit

# Example usage:
prices = [7, 1, 5, 3, 6, 4]
print(maxProfit(prices))  # Output: 5
